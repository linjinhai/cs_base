<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="CsBaseDashboard"> 
        <div class="container-fluid o_web_settings_dashboard">
            <div class="row o_cs_base_dashboard_top" style="margin-top: 20px; border-bottom: 1px solid #c6c6c6;">
                <div class="col-sm-6">
                    <h5>欢迎使用！</h5>
                </div>
                <div class="col-sm-6">
                    <a href="javascript:void(0)" class="btn btn-sm btn-default pull-right refresh-act"><i class="fa fa-refresh"></i> 刷新</a>
                </div>
            </div>
            <div class="row o_cs_base_dashboard_agent">
            </div>
            <div class="row o_cs_base_dashboard_extend">
            </div>

        </div>
    </t>


    <t t-name="DashboardAgent">
        <div class="row o_cs_base_dashboard_agent">
                <div class="col-sm-6 o_web_settings_dashboard_col">
                    <div style="">
                        <div class="">
                            <b>当前坐席</b>：<t t-esc="widget.data.no"></t>
                            <span class="pull-right"><i class="fa fa-phone"></i> <t t-esc="widget.data.mobile or '未设置'"></t></span>
                            <!--<hr style="margin-top: 5px; margin-bottom: 5px;"/>-->
                        </div>
                    </div>
                </div>
                <div class="col-sm-6 o_web_settings_dashboard_col">
                    <div class="">
                        <div>
                            <b>所在客服组</b>：<t t-esc="widget.data.groups"></t>
                            <span class="pull-right"><b>坐席状态</b>：<a href="javascript:void(0)" t-attf-class="btn btn-sm #{widget.data.status_class} status-change-act" title="点击切换状态"><t t-esc="widget.data.status"></t></a></span>
                        </div>
                    </div>
                </div>
        </div>
    </t>

</templates>
